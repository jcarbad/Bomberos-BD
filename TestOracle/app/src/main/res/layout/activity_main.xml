<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.joan.testoracle.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/lblLatitud"
            app:srcCompat="@drawable/bomberos_logo" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="RPH" />

        <TextView
            android:id="@+id/lblLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lblLongitud"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="37dp"
            android:text="Latitud: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtLongitud"
            android:layout_alignTop="@+id/txtLongitud"
            android:layout_toStartOf="@+id/txtRadio"
            android:gravity="center_vertical|center_horizontal"
            android:text="Longitud:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblLatitud"
            android:layout_alignStart="@+id/txtLongitud"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal"
            android:text="10.016507"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/txtLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txtLatitud"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal"
            android:text="-84.213894"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/txtRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/lblRadio"
            android:ems="10"
            android:inputType="number"
            android:text="600"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/lblRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lblLongitud"
            android:layout_below="@+id/txtLongitud"
            android:layout_marginTop="14dp"
            android:layout_toStartOf="@+id/txtRadio"
            android:gravity="center_vertical|center_horizontal"
            android:text="Radio:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtRadio"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtRadio"
            android:text="m"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
